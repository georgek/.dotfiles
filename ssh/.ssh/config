VisualHostKey=yes

Host github.com
     IdentitiesOnly yes
     IdentityFile ~/.ssh/id_github
     user git

Host gitlab.com
     IdentitiesOnly yes
     IdentityFile ~/.ssh/id_gitlab
     user git

Host raspberrypi
     IdentitiesOnly yes
     IdentityFile ~/.ssh/id_pi
     User pi

Host mini-server
     IdentitiesOnly yes
     IdentityFile ~/.ssh/id_mini-server
     User gk

Host kodi
     IdentitiesOnly yes
     IdentityFile ~/.ssh/id_kodi
     User root
