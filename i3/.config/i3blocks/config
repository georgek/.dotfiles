# i3blocks config file

command=/usr/libexec/i3blocks/$BLOCK_NAME
separator_block_width=15
markup=none

[pulse_control]
label=â™ª
command=$HOME/.config/i3blocks/pulse_control.py
interval=once
signal=2

[memory]
label=Mem
separator=false
interval=30

[memory]
label=Swap
instance=swap
interval=30

[disk]
command=$HOME/.config/i3blocks/display_disk_status.py
interval=once
signal=3
markup=pango

[iface]
color=#7F9F7F
interval=10
separator=false

[bandwidth]
command=$HOME/.config/i3blocks/bandwidth
interval=5

[temperature]
command=$HOME/.config/i3blocks/temperature --chip acpitz-virtual-0 -w 30 -c 40
interval=10
separator=false

[temperature]
command=$HOME/.config/i3blocks/temperature --chip coretemp-isa-0000 -w 50 -c 60
interval=10

[cpu_usage]
command=$HOME/.config/i3blocks/cpu_usage.py
interval=persist
markup=pango

[load_average]
interval=10

[time]
command=date '+%Y-%m-%d %H:%M:%S'
interval=1
