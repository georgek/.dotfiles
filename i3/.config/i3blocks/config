# i3blocks config file

command=/usr/libexec/i3blocks/$BLOCK_NAME
separator_block_width=15
markup=none
color=#DCDCCC

[pulse_control]
label=â™ª
command=$HOME/.config/i3blocks/pulse_control.py
interval=once
signal=2
markup=pango

[disk]
command=$HOME/.config/i3blocks/display_disk_status.py
interval=once
signal=3
markup=pango

[bandwidth]
command=$HOME/.config/i3blocks/bandwidth
interval=5
markup=pango

[cpu_usage]
command=$HOME/.config/i3blocks/cpu_usage.py
interval=persist
markup=pango

[load_average]
interval=10

[memory]
command=$HOME/.config/i3blocks/memory.py
interval=persist
markup=pango

[temperature]
command=$HOME/.config/i3blocks/temperature --chip acpitz-virtual-0 -w 30 -c 40
interval=10

[temperature]
command=$HOME/.config/i3blocks/temperature --chip coretemp-isa-0000 -w 45 -c 60
interval=10

[time]
command=date '+%Y-%m-%d %H:%M:%S %Z'
interval=1
